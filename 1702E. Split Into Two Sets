ll gcd ( ll a, ll b ) { return __gcd ( a, b ); }
ll lcm ( ll a, ll b ) { return a * ( b / gcd ( a, b ) ); }


int dx[] = { 0, 0, +1, -1, -1,  +1, -1, +1 };
int dy[] = { +1, -1, 0, 0, -1, +1, +1, -1 };

const ll mx = 2e5+123;
map<ll,vl>adj;
vector<bool>vis(mx);

ll dfs(ll src)
{
    vis[src] = true;
    for(auto u: adj[src])
    {
        if(!vis[u])
        {
            return dfs(u)+1;
        }
    }
    return 1;
}

void raihan()
{

    ll n;cin>>n;
    adj.clear(),vis.clear();
    vis.assign(n+1,false);
    bool flag = false;
    for(ll i=1;i<=n;i++)
    {
        ll u,v;cin>>u>>v;
        adj[u].push_back(v);
        adj[v].push_back(u);
        if(u == v || adj[u].size()>2 || adj[v].size()>2)
        {
            flag = true;
        }
    }
    if(flag)
    {
        cout<< "NO"<<endl;return;
    }
    for(ll i=1;i<=n;i++)
    {
        if(!vis[i])
        {
            ll comp = dfs(i);
            if(comp %2 !=0)
            {
                cout<<"NO"<<endl;return;
            }
        }
    }
    cout<<"YES"<<endl;


}




int main()
{
    bismillah;
    ll T;
    cin>>T;
    for(ll tt=1;tt<=T;tt++)
    {
        raihan();
    }


    return 0;
}

