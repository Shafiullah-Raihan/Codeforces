///https://codeforces.com/problemset/problem/116/A
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,mx=0, cap = 0;
    cin>>n;
    for(int i=0;i<n;i++){
        int a, b;
        cin>> a>> b;

        mx-= a;
        mx+=b;
        if(mx>cap){
            cap = mx;
        }

    }
    cout<< cap <<endl;
}
