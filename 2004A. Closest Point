///https://codeforces.com/contest/2004/problem/A
#include<bits/stdc++.h>
#define endl "\n";
#define ll long long
using namespace std;

int main()
{
    int t;
    cin>> t;
    while(t--){
        int n;
        cin>> n;
        int arr[n];
        for(int i=0;i<n;i++) cin>> arr[i];
        if(n>2){cout<< "NO"<< endl;}
        else if(abs(arr[0] - arr[1])==1){cout<< "NO"<< endl;}
        else {cout<< "YES"<< endl;}
    }

    return 0;

}

