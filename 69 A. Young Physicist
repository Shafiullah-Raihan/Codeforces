///https://codeforces.com/problemset/problem/69/A

#include<bits/stdc++.h>
using namespace std;
int main()
{

    int arrx[210] , arry[210], arrz[210] , n,sumx = 0 ,sumy = 0, sumz=0;
    cin>> n;
    for(int i= 0;i<n;i++){
        cin>> arrx[i]>> arry[i] >> arrz[i];
        sumx +=arrx[i];
        sumy+=arry[i];
        sumz += arrz[i];
    }
    if(sumx==0 && sumy==0 && sumz== 0){
        cout<< "YES" <<endl;

    }
    else{
        cout<< "NO"<<endl;
    }


}
