///https://codeforces.com/contest/2031/problem/B

#include<bits/stdc++.h>
using namespace std;

#define bismillah ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);





int main()
{
    bismillah;
    int T;cin>>T;
    while(T--)
    {
        int n;
        cin>>n;
        bool flag = true;
        vector<int>v(n+1);
        for(int i=1;i<=n;i++){
            cin>>v[i];
        }
        for(int i=1;i<=n;i++){
            if(abs(v[i] - i )>=2) {
                flag = false;
                break;
            }
        }
        if(flag) cout<< "YES"<<endl;
        else cout<< "NO"<<endl;





    }
    return 0;
}

