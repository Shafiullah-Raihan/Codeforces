///https://codeforces.com/problemset/problem/231/A

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,a,b,c,solve = 0;
    cin>>n;
    for(int i=0;i<n;i++){
        int cnt = 0;
        cin>> a>> b>> c;
        if(a==1){cnt++;}
        if(b==1){cnt++;}
        if(c==1){cnt++;}

        if(cnt>=2){
            solve++;
        }

    }
    cout<< solve << endl;
}
