///https://codeforces.com/problemset/problem/742/A

#include <bits/stdc++.h>
using namespace std;

#define bismillah ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);

int main() {
    bismillah;

    int n;
    cin>>n;
    int ans = pow(8,n);
    string s = to_string (ans);
    cout<<s[s.size()-1]<<endl;

    return 0;
}
