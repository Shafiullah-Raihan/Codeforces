///https://codeforces.com/problemset/problem/41/A
#include<bits/stdc++.h>
#define endl "\n";
#define ll long long
using namespace std;

int main()
{
    string s,t,s1;
    cin>> s>> s1;
    int len = s.size();
    t.resize(len);
    for(int i=len-1,j=0;i>=0;i--,j++){
        t[i] = s[j];
    }
    if(t==s1){
        cout<< "YES"<<endl;
    }
    else{cout<< "NO"<< endl;}

}

